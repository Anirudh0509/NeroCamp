<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center">Edit <%= camp.name %></h1>
        <div style="width:30%; margin: 20px auto;">
            <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= camp.name  %>" name="camp[name]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" value="<%= camp.price %>" name="camp[price]" min="100" step="100" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= camp.image %>" name="camp[image]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= camp.description %>" name="camp[description]" >
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" value="<%= camp.location %>" id="location" name="camp[location]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-block btn-primary">Update</button>
                </div>
            </form>
            <a href ="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>